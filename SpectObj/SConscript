import glob,os,platform

Import('baseEnv')
Import('listFiles')
progEnv = baseEnv.Clone()
libEnv = baseEnv.Clone()

SpectObjLib = libEnv.StaticLibrary('SpectObj', listFiles(['src/*.cxx']))

progEnv.Tool('registerObjects', package = 'SpectObj', libraries = [SpectObjLib], includes = listFiles(['SpectObj/*.h']))
