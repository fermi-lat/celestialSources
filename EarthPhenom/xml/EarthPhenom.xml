<source_library title="EP">

<!-- Phenomenological Earth limb model based on Fermi LAT observations -->
<source name="EarthPhenomLimb">
<spectrum escale="MeV">
<SpectrumClass name="EarthPhenomLimb" params="1.,10.,350000.,0."/>
<use_spectrum frame="zenith"/>
</spectrum>
</source>

<!-- Phenomenological inner Earth model based on Fermi LAT observations -->
<source name="EarthPhenomInner">
<spectrum escale="MeV">
<SpectrumClass name="EarthPhenomInner" params="1.,10.,1000.,0."/>
<use_spectrum frame="zenith"/>
</spectrum>
</source>

</source_library>