package genericSources
version v1r1

author James Chiang <jchiang@slac.stanford.edu>

# $Id$

use GlastPolicy *
use cfitsio v1r* IExternal
use CLHEP v2r* IExternal
use facilities v2r*
use astro v1r*
use flux v8r*

apply_pattern package_include
apply_pattern package_linkopts
apply_pattern package_stamps

private

macro genericSources_cppflags "" \
      Linux "-I ../src  -DTRAP_FPE" \
      WIN32 '/I..\src /wd4290'

macro source *.cxx WIN32 "*.h *.cxx"

library genericSources -no_share $(source)

application test_genericSources test/test.cxx

use SwigPolicy v*

path_remove PYTHONPATH genericSources
path_append PYTHONPATH $(GENERICSOURCESROOT)/$(BINDIR)

apply_pattern swig_module name="sources"
