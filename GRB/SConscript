import glob,os,platform

Import('baseEnv')
Import('listFiles')
progEnv = baseEnv.Clone()
libEnv = baseEnv.Clone()

GRBLib = libEnv.StaticLibrary('GRB', listFiles(['src/GRB/*.cxx', 'src/GRBmaker/*.cxx']))

progEnv.Tool('GRBLib')
test_GRBROOTBin = progEnv.Program('test_GRBROOT', listFiles(['src/test/other/GRBROOTtest.cxx']))

progEnv.Tool('registerObjects', package = 'GRB', libraries = [GRBLib])
