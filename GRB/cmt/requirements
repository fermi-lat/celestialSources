author Nicola Omodei<nicola.omodei@pi.infn.it> Johann Cohen-Tanugi <johann.cohen@pi.infn.it> Sandhia Bansal <sandhiab@lheapop.gsfc.nasa.gov>

# $Id$


use flux       v8r*
use ROOT       v2r*  IExternal

macro_prepend includes " -I$(GRBROOT)/src/ "

macro GRB_linkopts " -L $(GRB_root)/$(BINDIR) -lGRBLib " \
                       WIN32 ""

macro_append ROOT_linkopts " $(ROOT_GUI_libs) "

#WHY DO I NEED THAT NOW????
macro_append ROOT_linkopts "-lGui -lGX11" \
	             WIN32 "libGUI.lib "


apply_pattern package_Cshlibflags  

private

apply_pattern package_headers

apply_pattern package_stamps
macro_append GRB_stamps " $(GRB_root)/$(BINDIR)/GRBLib.stamp"

macro source "*.cxx" WIN32 "*.cxx *.h"

library GRBLib -no_share $(source) \
     -s=GRB         $(source)\
     -s=GRBmaker    $(source)\
     -s=LatGRBAlert $(source)

macro libs    ""   \
        WIN32 " $(GRB_root)/$(BINDIR)/GRBLib.lib "

apply_pattern ld_library_path

application test_GRB      test/testMgr.cxx $(libs)
application test_GRBROOT  test/other/GRBROOTtest.cxx $(libs)

